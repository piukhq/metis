#!/usr/bin/with-contenv /bin/bash

ENVFILE="/usr/local/src/metis/.env"

touch $ENVFILE
chown apps:apps $ENVFILE

echo "HERMES_URL=$HERMES_URL" > $ENVFILE
echo "METIS_DEBUG=$DEBUG" >> $ENVFILE
echo "METIS_TESTING=$TESTING" >> $ENVFILE
echo "SPREEDLY_SIGNING_SECRET=$SPREEDLY_SIGNING_SECRET" >> $ENVFILE
echo "SPREEDLY_BASE_URL=$SPREEDLY_BASE_URL" >> $ENVFILE
echo "METIS_SENTRY_DSN=$METIS_SENTRY_DSN" >> $ENVFILE
echo "CELERY_BROKER_URL=redis://:$REDIS_PASSWORD@$REDIS_IP:$REDIS_PORT/3" >> $ENVFILE
echo "PONTUS_DATABASE=$PONTUS_DATABASE" >> $ENVFILE
echo "PONTUS_USER=$PONTUS_USER" >> $ENVFILE
echo "PONTUS_PASSWORD=$PONTUS_PASSWORD" >> $ENVFILE
echo "PONTUS_HOST=$PONTUS_HOST" >> $ENVFILE
echo "PONTUS_PORT=$PONTUS_PORT" >> $ENVFILE
echo "RABBITMQ_HOST=$RABBITMQ_HOST" >> $ENVFILE
echo "RABBITMQ_USER=$RABBITMQ_USER" >> $ENVFILE
echo "RABBITMQ_PASS=$RABBITMQ_PASS" >> $ENVFILE
echo "GRAYLOG_HOST=$GRAYLOG_HOST" >> $ENVFILE
echo "GRAYLOG_PORT=$GRAYLOG_PORT" >> $ENVFILE
